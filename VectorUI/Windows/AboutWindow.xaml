<Window x:Class="VectorUI.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VectorUI"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="О программе"
        Width="340"
        Height="230"
        ResizeMode="NoResize"
        mc:Ignorable="d">

    <DockPanel Margin="10">
        <DockPanel.Resources>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="13" />
            </Style>

        </DockPanel.Resources>
        <Label DockPanel.Dock="Top">Калькулятор векторов</Label>
        <Label DockPanel.Dock="Top">Разработчик программы: Голубенков Д.А.</Label>
        <Label DockPanel.Dock="Top">Группа: ИВБО-06-18</Label>
        <Label HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               DockPanel.Dock="Bottom">
            2021 г.
        </Label>
    </DockPanel>
</Window>
